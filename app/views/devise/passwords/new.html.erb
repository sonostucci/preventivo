<body class="bg-dark text-white">
<center>
<div class="bg-info text-dark ">
<br>
<h2 class="fw-bold fs-1">Password dimenticata?</h2>
<br>
</div>
<br>
<br>
<br>
<br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
   <h5> <%= f.label :email %><br /></h5>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Inviami le istruzioni per recuperare la password" %>
  </div>
<% end %>

<div class="bg-info fixed-bottom">
<br>
<div class="container">
  <div class="row">
     <div class="col-6">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Registrati", new_registration_path(resource_name), class:'btn btn-dark btn-outline-light w-100' %><br />
      <% end %>
    </div>
    <div class="col-6">
    <%- if controller_name != 'sessions' %>
    <%= link_to "Accedi", new_session_path(resource_name), class:'btn btn-dark btn-outline-light w-100' %><br />
  <% end %>
    </div>
  </div>
</div>
<br>
</div





