    </tr>
  </thead>

  <tbody >
    <% @fattures.each do |fatture| %>
      <tr >
        <td></td>
        <td><%= fatture.spettabile %></td>
        <td><%= fatture.nomelavoro %></td>
        <td><%= fatture.iva %>%</td>
